<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../partials/head'); %>
  </head>
  <body class="container">
    <header><%- include('../../partials/header'); %></header>

    <main>
      <h1>Create</h1>

      <form action="/task/<%= task._id %>" method="post">
        <label for="title">Title</label>
        <input
          id="title"
          name="title"
          type="text"
          placeholder="Title ..."
          value="<%= task.title %>"
        />

        <br />

        <label for="description">date_debut</label>
        <input
          id="description"
          name="description"
          type="text"
          placeholder="Description ..."
          value="<%= task.description %>"
        />

        <br />

        <label for="date_debut">Start Date (dd/mm/yyyy)</label>
        <input
          id="date_debut"
          name="date_debut"
          type="text"
          placeholder="dd/mm/yyyy"
          value="<%= task.date_debut %>"
        />

        <label for="date_fin">End Date (dd/mm/yyyy)</label>
        <input
          id="date_fin"
          name="date_fin"
          type="text"
          placeholder="dd/mm/yyyy"
          value="<%= task.date_fin %>"
        />

        <label for="done">Done</label>
        <input id="done" name="done" type="checkbox" <% if (task.done) { %> checked <% } %> />

        <button type="submit">Submit</button>
      </form>
    </main>

    <footer><%- include('../../partials/footer'); %></footer>
  </body>
</html>
